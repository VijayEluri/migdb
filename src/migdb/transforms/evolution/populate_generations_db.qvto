query DB::rdb::operations::AddNotNullConstraint::isValid(gen : DB::rdb::ModelGeneration) : Boolean {
	// pro daný sloupec neexistuje omezení stejného názvu
	return not gen.isConstrainForColumn(self.owningSchemaName, self.owningTableName, self.owningColumnName, self.name);	   
}

// pøidá omezení 'NotNull' pro sloupec
mapping DB::rdb::operations::AddNotNullConstraint::apply(inout gen : DB::rdb::ModelGeneration) {
	var c : DB::rdb::Column := gen.findColumn(self.owningSchemaName, self.owningTableName, self.owningColumnName);
	c.constraints += object DB::rdb::NotNullConstraint {
		name := self.name;
	}
}

