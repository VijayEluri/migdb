/* ++++++++++ QUERIES FOR OPERATIONS ++++++++++++++++++++ */

// ovìøí, zda-li existuje schéma v generaci
query DB::rdb::ModelGeneration::isSchemaInGeneration(sName : String) : Boolean {
	return self.schemas->exists(name = sName);
}

// vrátí schéma z generace
query DB::rdb::ModelGeneration::findSchema(sName : String) : DB::rdb::Schema {
	return self.schemas->selectOne(name = sName);
}

// ovìøí, zda-li existuje sekvence ve schématu
query DB::rdb::ModelGeneration::isSequenceInSchema(sName : String, qName : String) : Boolean {
	return self.findSchema(sName).sequences->exists(name = qName);
}

// ovìøí, zda-li existuje index ve schématu
query DB::rdb::ModelGeneration::isIndexInSchema(sName : String, iName : String) : Boolean {
	return self.findSchema(sName).indexes->exists(name = iName);
}

// ovìøí, zda-li existuje tabulka ve schématu
query DB::rdb::ModelGeneration::isTableInSchema(sName : String, tName : String) : Boolean {
	return self.findSchema(sName).tables->exists(name = tName);
}

// vrátí tabulku ze schéma
query DB::rdb::ModelGeneration::findTable(sName : String, tName : String) : DB::rdb::Table {
	return self.findSchema(sName).tables->selectOne(name = tName);
}

// ovìøí, zda-li existuje sloupec v tabulce
query DB::rdb::ModelGeneration::isColumnInTable(sName : String, tName : String, cName : String) : Boolean {
	return self.findTable(sName, tName).columns->exists(name = cName);
}

// vrátí sloupec z tabulky
query DB::rdb::ModelGeneration::findColumn(sName : String, tName : String, cName : String) : DB::rdb::Column {
	return self.findTable(sName, tName).columns->selectOne(name = cName);
}

// ovìøí, zda-li existuje omezení pro sloupec 
query DB::rdb::ModelGeneration::isConstrainForColumn(sName : String, tName : String, cName : String, rName : String) : Boolean {
	return self.findColumn(sName, tName, cName).constraints->exists(name = rName);
}