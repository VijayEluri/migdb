modeltype DB uses 'mm-db';

transformation DB_To_Rdb(in inModel : DB, out outModel : DB);
main() {
	assert(inModel.rootObjects()->size() = 1);
	assert(inModel.rootObjects()->forAll(oclIsKindOf(DB::rdb::ModelRoot)));
	
	log("transformation started...");
	
	inModel.rootObjects().deepclone();

	var root : DB::rdb::ModelRoot = outModel.rootObjects()![DB::rdb::ModelRoot];
	var gen0 : DB::rdb::ModelGeneration = root.modelGenerations->first();
	
	root.operations->forEach(op) {
		log("	iterating over operation " + op.repr());
		if (op.isValid(gen0)) then {
			log("	operation is valid " + op.repr());
			op.xmap apply(gen0);
		} else {
			log("	operation is invalid " + op.repr());
		} endif;
	};
	
	root.operations = root.operations->reject(true);
}

// kontroluje validitu operace
abstract query DB::rdb::operations::ModelOperation::
	isValid(gen : DB::rdb::ModelGeneration) : Boolean;

// namapuje danou operaci
abstract mapping DB::rdb::operations::ModelOperation::
	apply(inout gen : DB::rdb::ModelGeneration);


/* ++++++++++ ADD OPERATIONS ++++++++++++++++++++ */

query DB::rdb::operations::AddSchema::isValid(gen : DB::rdb::ModelGeneration) : Boolean {
	// v dané generaci neexistuje schéma stejného názvu
	return not gen.isSchemaInGeneration(self.name);
}

// pøidá schéma do generace
mapping DB::rdb::operations::AddSchema::apply(inout gen : DB::rdb::ModelGeneration) {
	gen.schemas += object DB::rdb::Schema {
		name := self.name;
	}
}

query DB::rdb::operations::AddSequence::isValid(gen : DB::rdb::ModelGeneration) : Boolean {
	// v daném schématu neexistuje sekvence stejného názvu
	return not gen.isSequenceInSchema(self.owningSchemaName, self.name);
}

// pøidá sekvenci do schématu
mapping DB::rdb::operations::AddSequence::apply(inout gen : DB::rdb::ModelGeneration) {
	var s : DB::rdb::Schema := gen.findSchema(self.owningSchemaName);
	s.sequences += object DB::rdb::Sequence {
		name := self.name;
		cacheSize := self.cacheSize;
	}
}

query DB::rdb::operations::AddIndex::isValid(gen : DB::rdb::ModelGeneration) : Boolean {
	// v daném schématu neexistuje index stejného názvu
	return not gen.isIndexInSchema(self.owningSchemaName, self.name);
}

// pøidá index do schématu
mapping DB::rdb::operations::AddIndex::apply(inout gen : DB::rdb::ModelGeneration) {
	var s : DB::rdb::Schema := gen.findSchema(self.owningSchemaName);
	s.indexes += object DB::rdb::Index {
		name := self.name;
	}
}

query DB::rdb::operations::AddTable::isValid(gen : DB::rdb::ModelGeneration) : Boolean {
	// v daném schématu neexistuje tabulka stejného názvu
	return not gen.isTableInSchema(self.owningSchemaName, self.name);
}

// pøidá tabulku do schématu
mapping DB::rdb::operations::AddTable::apply(inout gen : DB::rdb::ModelGeneration) {
	var s : DB::rdb::Schema := gen.findSchema(self.owningSchemaName);
	s.tables += object DB::rdb::Table {
		name := self.name;
	};
}

query DB::rdb::operations::AddColumn::isValid(gen : DB::rdb::ModelGeneration) : Boolean {
	// v dané tabulce neexistuje sloupec stejného názvu
	return not gen.isColumnInTable(self.owningSchemaName, self.owningTableName, self.name);
}

// pøidá sloupec do tabulky
mapping DB::rdb::operations::AddColumn::apply(inout gen : DB::rdb::ModelGeneration) {
	var t : DB::rdb::Table := gen.findTable(self.owningSchemaName, self.owningTableName);
	t.columns += object DB::rdb::Column {
		name := self.name;
		type := self.type;
		defaultValue := self.defaultValue;
	}
}

