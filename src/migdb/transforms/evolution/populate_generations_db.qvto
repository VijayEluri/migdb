// p�id� sloupec do tabulky
mapping DB::rdb::operations::AddColumn::apply(inout gen : DB::rdb::ModelGeneration) {
	var t : DB::rdb::Table := gen.findTable(self.owningSchemaName, self.owningTableName);
	t.columns += object DB::rdb::Column {
