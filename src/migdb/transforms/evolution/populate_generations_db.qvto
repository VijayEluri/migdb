/* ++++++++++ QUERIES FOR OPERATIONS ++++++++++++++++++++ */

// ov���, zda-li existuje sch�ma v generaci
query DB::rdb::ModelGeneration::isSchemaInGeneration(sName : String) : Boolean {
	return self.schemas->exists(name = sName);
}

// vr�t� sch�ma z generace
query DB::rdb::ModelGeneration::findSchema(sName : String) : DB::rdb::Schema {
	return self.schemas->selectOne(name = sName);
}

// ov���, zda-li existuje sekvence ve sch�matu
query DB::rdb::ModelGeneration::isSequenceInSchema(sName : String, qName : String) : Boolean {
	return self.findSchema(sName).sequences->exists(name = qName);
}

// ov���, zda-li existuje index ve sch�matu
query DB::rdb::ModelGeneration::isIndexInSchema(sName : String, iName : String) : Boolean {
	return self.findSchema(sName).indexes->exists(name = iName);
}

// vr�t� index ze sch�ma
query DB::rdb::ModelGeneration::findIndex(sName : String, iName : String) : DB::rdb::Index {
	return self.findSchema(sName).indexes->selectOne(name = iName);
}

// ov���, zda-li existuje tabulka ve sch�matu
query DB::rdb::ModelGeneration::isTableInSchema(sName : String, tName : String) : Boolean {
	return self.findSchema(sName).tables->exists(name = tName);
}

// vr�t� tabulku ze sch�ma
query DB::rdb::ModelGeneration::findTable(sName : String, tName : String) : DB::rdb::Table {
	return self.findSchema(sName).tables->selectOne(name = tName);
}

// ov���, zda-li existuje sloupec v tabulce
query DB::rdb::ModelGeneration::isColumnInTable(sName : String, tName : String, cName : String) : Boolean {
	return self.findTable(sName, tName).columns->exists(name = cName);
}

// ov���, zda-li existuj� sloupce v tabulce
query DB::rdb::ModelGeneration::areColumnsInTable(sName : String, tName : String, cNames : OrderedSet(String)) : Boolean {
	var b : Boolean := true;
	cNames->forEach(cName) {
		b = b and self.isColumnInTable(sName, tName, cName);
	};
	return b;
}

// vr�t� sloupec z tabulky
query DB::rdb::ModelGeneration::findColumn(sName : String, tName : String, cName : String) : DB::rdb::Column {
	return self.findTable(sName, tName).columns->selectOne(name = cName);
}

// vr�t� se�azenou mno�inu sloupc� z tabulky
query DB::rdb::ModelGeneration::findColumns(sName : String, tName : String, cNames : OrderedSet(String)) : OrderedSet(DB::rdb::Column) {
	var columns : OrderedSet(DB::rdb::Column);
	cNames->forEach(cName) {
		columns += self.findColumn(sName, tName, cName);
	};
	return columns;
}

// ov���, zda-li existuje omezen� pro tabulku
query DB::rdb::ModelGeneration::isConstraintForTable(sName : String, tName : String, rName : String) : Boolean {
	return self.findTable(sName, tName).constraints->exists(name = rName);
}

// ov���, zda-li existuje omezen� pro sloupec 
query DB::rdb::ModelGeneration::isConstraintForColumn(sName : String, tName : String, cName : String, rName : String) : Boolean {
	return self.findColumn(sName, tName, cName).constraints->exists(name = rName);
}

// vr�t� omezen� dan� tabulky
query DB::rdb::ModelGeneration::findTableConstraint(sName : String, tName : String, rName : String) : DB::rdb::TableConstraint {
	return self.findTable(sName, tName).constraints->selectOne(name = rName);
}

// vr�t� omezen� dan�ho sloupce
query DB::rdb::ModelGeneration::findColumnConstraint(sName : String, tName : String, cName : String, rName : String) : DB::rdb::ColumnConstraint {
	return self.findColumn(sName, tName, cName).constraints->selectOne(name = rName);
}

// ov���, zda-li existuje pro sloupce tabulkov� omezen� 'Unique' �i 'PrimaryKey' 
query DB::rdb::ModelGeneration::isUnique(sName : String, tName : String, cName : OrderedSet(String)) : Boolean {
	var target : OrderedSet(DB::rdb::Column) = self.findColumns(sName, tName, cName);
	// vybere omezen� typu 'Unique'
	self.findTable(sName, tName).constraints.oclAsType(DB::rdb::UniqueIndex)->forEach(r) {
		if (r.underlyingIndex.columns = target) then {
			return true;
		} endif;
	};
	return false;
}

// ov���, zda-li existuje pro sloupce tabulkov� omezen� 'PrimaryKey' �i 'ForeignKey' 
query DB::rdb::ModelGeneration::isKey(sName : String, tName : String, cName : String) : Boolean {
	var target : DB::rdb::Column = self.findColumn(sName, tName, cName);
	// vybere omezen� typu 'PrimaryKey'
	self.findTable(sName, tName).constraints.oclAsType(DB::rdb::PrimaryKey)->forEach(r) {
		r.underlyingIndex.columns->forEach(c) {
			if (c = target) then {
				return true;
			} endif;
		};
	};
	// vybere omezen� typu 'ForeignKey'
	self.findTable(sName, tName).constraints.oclAsType(DB::rdb::ForeignKey)->forEach(r) {
		r.targetColumns->forEach(c) {
			if (c = target) then {
				return true;
			} endif;
		};
	};
	return false;
}